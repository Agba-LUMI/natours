header.header 
  nav.nav.nav--tours 
    a(href='/').nav__el All tours
  .header__logo 
    img(src='/img/logo-white.png' alt='Natours Logo')
  nav.nav.nav--user 
    if user
      button.nav__el--logout.nav__el Log out
      a.nav__el(href='/me')
        img(src=`/img/users/${user.photo}`, alt='Photo of ${user.name}')
        span= user.name.split(" ")[0]
    else
      a(href="/login").nav__el Log in 
      a(href="/signup").nav__el Sign up 